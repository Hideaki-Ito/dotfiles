scriptencoding utf-8

" 自動改行:しない
"---------------------------------------------------------------------------
set nowrap

" 行番号を表示
"---------------------------------------------------------------------------
set number

" スワップファイル出力先
"---------------------------------------------------------------------------
set directory=~/.vim/swap

" バックアップファイル作成
"---------------------------------------------------------------------------
set backupdir=~/.vim/backup

" undoファイル作成
"---------------------------------------------------------------------------
set undodir=~/.vim/undo

" 無名レジスタをに入るデータを*レジスタにも入れる
"---------------------------------------------------------------------------
set clipboard+=unnamed

" 内部文字コード
"---------------------------------------------------------------------------
set encoding=utf-8

" 読込文字コード
"---------------------------------------------------------------------------
set fileencodings=utf-8

" 改行コード:LF
set fileformat=unix

" タブ幅
"---------------------------------------------------------------------------
set tabstop=4

" 自動インデントのタブ幅
"---------------------------------------------------------------------------
set shiftwidth=4

" タブをスペースに置換
"---------------------------------------------------------------------------
set expandtab

" 連続した空白に対してタブキーやバックスペースキーでカーソルが動く幅
"---------------------------------------------------------------------------
set softtabstop=4

" 自動インデント
"---------------------------------------------------------------------------
set autoindent

" 改行時に入力された行の末尾に合わせて次の行のインデントを増減する
"---------------------------------------------------------------------------
set smartindent

" 記号などを2バイト分の幅を取る
"---------------------------------------------------------------------------
set ambiwidth=double
